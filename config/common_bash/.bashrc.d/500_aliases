alias cat=bat
alias ls='lsd'
alias l='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias lt='ls --tree'
alias tree='lt'
alias vim="nvim"
alias ff="fzf --bind 'enter:become(nvim {})'"
alias ..="cd .."
alias ...="cd ../.."
alias op="op.exe"

# Compression
compress() { tar -czf "${1%/}.tar.gz" "${1%/}"; }
alias decompress="tar -xzf"
